<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/popup_4">

    <TextView
            android:text="Jadwal Euro 2020: Slovakia vs Spanyol"
            android:layout_width="258dp"
            android:layout_height="66dp" android:id="@+id/textView"
            android:layout_marginEnd="50dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp" android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="55dp"
            android:textAlignment="center" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2" android:textStyle="bold"/>

    <Button
            android:text="X"
            android:layout_width="48dp"
            android:layout_height="48dp" android:id="@+id/backButton"
            android:layout_marginTop="570dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginEnd="274dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" app:layout_constraintHorizontal_bias="0.76"
            app:layout_constraintVertical_bias="1.0" android:textSize="24sp"/>
    <ScrollView
            android:layout_width="393dp"
            android:layout_height="477dp" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/backButton" android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.659"
            app:layout_constraintVertical_bias="1.0" android:id="@+id/scrollView2"
            android:paddingRight="15dp" android:paddingLeft="15dp" android:paddingTop="15dp"
            android:paddingBottom="15dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:padding="10dp">
            <ImageView
                    android:layout_width="289dp"
                    android:layout_height="181dp" app:srcCompat="@drawable/thumbnail_sports_satu"
                    android:id="@+id/imageView" android:layout_marginStart="40dp" android:layout_marginRight="15dp"/>
            <TextView
                    android:text="Jakarta, CNN Indonesia -- Timnas Spanyol akan menjalani laga hidup mati saat menghadapi Slovakia di Grup E Euro 2020 (Euro 2021). Berikut ini jadwal pertandingan Slovakia vs Spanyol. Pertandingan pemungkas Grup E Piala Eropa 2020 ini akan berlangsung di Stadion La Cartuja, Sevilla, Spanyol pada Rabu (23/6) malam. Kick-off pertandingan dijadwalkan mulai pukul 23.00 WIB."
                    android:layout_width="305dp"
                    android:layout_height="166dp" android:id="@+id/textView2" android:visibility="visible"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>
            <TextView
                    android:text="Faktanya, status tim berpenghuni sejumlah bintang tak membuat tim asuhan Luis Enrique ini mendominasi. Malahan, Alvaro Morata dan kawan-kawan seperti kesulitan menemukan permainan terbaiknya dalam dua laga sebelumnya."
                    android:layout_width="305dp"
                    android:layout_height="116dp" android:id="@+id/textView3" android:visibility="visible"
                    android:layout_marginStart="40dp"
                    android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>
            <TextView
                    android:text="Maka dari itu La Furia Roja, julukan Spanyol, harus bisa meraih kemenangan atas Slovakia untuk membuka peluang lolos ke babak selanjutnya. Jika kalah, asa tampil di fase knock-out akan tertutup.
Pasalnya, Spanyol baru mengumpulkan dua poin dari dua laga. Hasil imbang juga belum tentu menolong karena itu membuat Spanyol bergantung pada laga Swedia vs Polandia."
                    android:layout_width="305dp"
                    android:layout_height="166dp" android:id="@+id/textView4" android:visibility="visible"
                    android:layout_marginStart="40dp"
                    android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="286dp"
                        android:layout_height="172dp" app:srcCompat="@drawable/pic1_sport_satu"
                        android:id="@+id/imageView2" android:layout_weight="1" android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp" android:layout_marginRight="15dp"/>
                <TextView
                        android:text="Jika ditinjau dari sejarah, Spanyol layak percaya diri. Dari enam pertemuan sejak 1996, tim Matador memenangkan empat pertandingan dan hanya sekali imbang serta kalah. Rekor ini diharapkan berlanjut."
                        android:layout_width="308dp"
                        android:layout_height="106dp" android:id="@+id/textView5" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:textAlignment="viewStart" android:padding="5dp" android:layout_marginRight="15dp"/>
            </LinearLayout>
            <TextView
                    android:layout_width="307dp"
                    android:layout_height="226dp" android:id="@+id/textView6" android:visibility="visible"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="viewStart" android:padding="5dp"
                    android:text="Namun, Slovakia juga punya hasrat besar untuk lolos ke fase knock-out. Pencapaian negeri pecahan Cekoslovakia ini di Euro adalah menembus babak 16 besar, yakni pada edisi 2016. Karenanya pencapaian sama ingin diraih.
Pelatih Slovakia, Stefan Tarkovic menegaskan, tak ingin bergantung hasil pertandingan Swedia vs Polandia. Tarkovic ingin Slovakia lolos ke babak 16 besar Euro 2020 dengan jerih payah sendiri. Slovakia sendiri bisa memastikan lolos dengan hasil imbang lawan Spanyol.
"
                    android:layout_marginRight="10dp"/>
            <TextView
                    android:layout_width="303dp"
                    android:layout_height="81dp" android:id="@+id/textView7" android:visibility="visible"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="viewStart" android:padding="5dp"
                    android:text="Source : https://www.cnnindonesia.com/olahraga/20210621100152-142-657111/jadwal-euro-2020-slovakia-vs-spanyol">

            </TextView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>