<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/popup_6">

    <TextView
            android:text="Perjuangan Karier Selena Gomez ini Patut Kita Teladani"
            android:layout_width="260dp"
            android:layout_height="79dp" android:id="@+id/textView"
            android:layout_marginEnd="50dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp" android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="55dp"
            android:textAlignment="center" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2" android:textStyle="bold"/>

    <Button
            android:text="X"
            android:layout_width="48dp"
            android:layout_height="48dp" android:id="@+id/backButton"
            android:layout_marginTop="570dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginEnd="274dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" app:layout_constraintHorizontal_bias="0.76"
            app:layout_constraintVertical_bias="1.0" android:textSize="24sp"/>
    <ScrollView
            android:layout_width="393dp"
            android:layout_height="477dp" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/backButton" android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.659"
            app:layout_constraintVertical_bias="1.0" android:id="@+id/scrollView2"
            android:paddingRight="15dp" android:paddingLeft="15dp" android:paddingTop="15dp"
            android:paddingBottom="15dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:padding="10dp">
            <ImageView
                    android:layout_width="289dp"
                    android:layout_height="181dp" app:srcCompat="@drawable/pic7_entertainment_satu"
                    android:id="@+id/imageView" android:layout_marginStart="40dp" android:layout_marginRight="15dp"/>
            <TextView
                    android:text="Cantik, muda dan berbakat, tentu saja adalah tiga kata yang menggambarkan penyanyi cantik Selena Gomez. Seperti yang banyak kita tahu, kekasih dari The Weeknd ini pernah mengidap penyakit mental. "
                    android:layout_width="305dp"
                    android:layout_height="96dp" android:id="@+id/textView2" android:visibility="visible"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>
            <TextView
                    android:text="Namun begitupun ia masih tetap bersinar di panggung dan kariernya masih tetap menanjak. Banyak pasang surut di dunia hiburan yang sudah ia lewati mulai dari skandal hingga prestasi, dan inilah hal-hal yang perlu kita teladani dari ketekunan Selena Gomez."
                    android:layout_width="305dp"
                    android:layout_height="137dp" android:id="@+id/textView3" android:visibility="visible"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>



            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">

                <ImageView
                        android:layout_width="289dp"
                        android:layout_height="225dp" app:srcCompat="@drawable/pic1_entertainment_satu"
                        android:id="@+id/imageView3" android:layout_marginStart="40dp"
                        android:layout_marginRight="15dp"/>
                <TextView
                        android:text="1. Selalu menomorsatukan orangtua"
                        android:layout_width="305dp"
                        android:layout_height="29dp" android:id="@+id/textView5" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textAlignment="viewStart" android:padding="5dp"/>
                <TextView
                        android:text="Selena Gomez mengakui kalau ia terjun ke dunia hiburan saat usianya tujuh tahun dan orang yang paling berjasa sepanjang kariernya adalah ibunya. Mantan aktris Disney ini mengatakan kalau ibunya selalu mendukung apapun yang ia lakukan asalkan anaknya bahagia melakukannya. Makanya, Selena jadi sayang banget sama ibunya."
                        android:layout_width="305dp"
                        android:layout_height="152dp" android:id="@+id/textView6" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">

                <ImageView
                        android:layout_width="289dp"
                        android:layout_height="225dp" app:srcCompat="@drawable/pic2_entertainment_satu"
                        android:id="@+id/imageView4" android:layout_marginStart="40dp"
                        android:layout_marginRight="15dp"/>
                <TextView
                        android:text="2. Ketenaran tidak membutakan matanya"
                        android:layout_width="305dp"
                        android:layout_height="29dp" android:id="@+id/textView7" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textAlignment="viewStart" android:padding="5dp"/>
                <TextView
                        android:text="Dalam sebuah wawancara, Selena pernah bilang kalau sebagai anak remaja dahulu, dia nggak suka banyak orang yang mengerubunginya. Ia juga merasa risih dan aneh ketika banyak orang mengenalnya, maka dari itu ia berusaha untuk tampil sederhana jika berada di ruang publik."
                        android:layout_width="305dp"
                        android:layout_height="136dp" android:id="@+id/textView8" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">

                <ImageView
                        android:layout_width="289dp"
                        android:layout_height="225dp" app:srcCompat="@drawable/pic3_entertainment_satu"
                        android:id="@+id/imageView5" android:layout_marginStart="40dp"
                        android:layout_marginRight="15dp"/>
                <TextView
                        android:text="3. Menghormati semua orang tanpa terkecuali"
                        android:layout_width="305dp"
                        android:layout_height="29dp" android:id="@+id/textView9" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textAlignment="viewStart" android:padding="5dp"/>
                <TextView
                        android:text="Sepanjang kariernya, ia banyak berguru dengan semua orang termasuk manager dan pelatih pribadinya. Ia juga bilang kalau dukungan dari orang terdekat juga sangat berarti karena merekalah yang membuat ia seperti sekarang, makanya ia jadi menghormati banget orang-orang di sekitarnya saat ini."
                        android:layout_width="305dp"
                        android:layout_height="152dp" android:id="@+id/textView10" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">

                <ImageView
                        android:layout_width="289dp"
                        android:layout_height="225dp" app:srcCompat="@drawable/pic4_entertainment_satu"
                        android:id="@+id/imageView6" android:layout_marginStart="40dp"
                        android:layout_marginRight="15dp"/>
                <TextView
                        android:text="4. Punya lingkungan sosial kecil yang bisa dipercaya"
                        android:layout_width="305dp"
                        android:layout_height="29dp" android:id="@+id/textView11" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textAlignment="viewStart" android:padding="5dp"/>
                <TextView
                        android:text="Percaya atau tidak, Selena bilang kalau teman dekatnya itu nggak banyak lho. Dia kenal banyak orang, tapi teman curhatnya hanya tiga orang. Selena percaya kalau berhubungan dengan orang banyak itu baik tapi lebih penting lagi untuk menjaga batasan sosial di umurnya yang sudah dewasa seperti sekarang."
                        android:layout_width="305dp"
                        android:layout_height="152dp" android:id="@+id/textView12" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">

                <ImageView
                        android:layout_width="289dp"
                        android:layout_height="225dp" app:srcCompat="@drawable/pic5_entertainment_satu"
                        android:id="@+id/imageView7" android:layout_marginStart="40dp"
                        android:layout_marginRight="15dp"/>
                <TextView
                        android:text="5. Blak-blakan bercerita tentang penyakit mentalnya"
                        android:layout_width="305dp"
                        android:layout_height="29dp" android:id="@+id/textView13" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textAlignment="viewStart" android:padding="5dp"/>
                <TextView
                        android:text="Selena pernah blak-blakan mengaku kalau ia memiliki gangguan mental yang dikarenakan aspek publik menanggapi kepopulerannya. Ketika berbicara tentang diri secara pribadi seperti pengenalan diri, kepercayaan diri, kontrol diri, ia masih merasa sukar untuk mendefinisikannya. Namun ia butuh terbuka kepada publik karena ia adalah figur publik."
                        android:layout_width="305dp"
                        android:layout_height="152dp" android:id="@+id/textView14" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">

                <ImageView
                        android:layout_width="289dp"
                        android:layout_height="225dp" app:srcCompat="@drawable/pic6_entertainment_satu"
                        android:id="@+id/imageView8" android:layout_marginStart="40dp"
                        android:layout_marginRight="15dp"/>
                <TextView
                        android:text="6. Berani bicara di sosial media"
                        android:layout_width="305dp"
                        android:layout_height="29dp" android:id="@+id/textView15" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textAlignment="viewStart" android:padding="5dp"/>
                <TextView
                        android:text="Selena juga menjadi salah satu artis yang paling banyak diperbincangkan di Instagram lewat foto dan caption-nya di Instagram. Ia tahu kok kalau kadang-kadang unggahannya membuat ia jatuh dalam masalah, namun ia percaya kalau ia bisa menggerakan banyak orang lewat di media sosial. "
                        android:layout_width="305dp"
                        android:layout_height="152dp" android:id="@+id/textView16" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>
            </LinearLayout>

            <TextView
                    android:layout_width="303dp"
                    android:layout_height="84dp" android:id="@+id/textView100" android:visibility="visible"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="viewStart" android:padding="5dp"
                    android:text="Source : https://www.popbela.com/career/working-life/ria-theresia/perjuangan-karier-selena-gomez/6">

            </TextView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>