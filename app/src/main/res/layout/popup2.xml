<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/popup_3">

    <TextView
            android:text="Gaya Memikat Meadow Walker, Anak Mendiang Paul Walker, Saat Hadiri Premier Film F9: Fast and Furious 9"
            android:layout_width="265dp"
            android:layout_height="116dp" android:id="@+id/textView"
            android:layout_marginEnd="50dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp" android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="55dp"
            android:textAlignment="center" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2" android:textStyle="bold"/>

    <Button
            android:text="X"
            android:layout_width="48dp"
            android:layout_height="48dp" android:id="@+id/backButton"
            android:layout_marginTop="570dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginEnd="274dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" app:layout_constraintHorizontal_bias="0.76"
            app:layout_constraintVertical_bias="1.0" android:textSize="24sp"/>
    <ScrollView
            android:layout_width="393dp"
            android:layout_height="477dp" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/backButton" android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.659"
            app:layout_constraintVertical_bias="1.0" android:id="@+id/scrollView2"
            android:paddingRight="15dp" android:paddingLeft="15dp" android:paddingTop="15dp"
            android:paddingBottom="15dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:padding="10dp">
            <ImageView
                    android:layout_width="289dp"
                    android:layout_height="225dp" app:srcCompat="@drawable/thumbnail_fashion_dua"
                    android:id="@+id/imageView" android:layout_marginStart="40dp" android:layout_marginRight="15dp"/>
            <TextView
                    android:text="Meadow Walker, putri mendiang aktor Paul Walker, mencuri perhatian saat menghadiri premier film F9: Fast and Furious 9 di Los Angeles, Amerika Serikat, pada Jumat (18/6/2021) lalu, lewat busana dan penampilan memikatnya."
                    android:layout_width="305dp"
                    android:layout_height="114dp" android:id="@+id/textView2" android:visibility="visible"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="286dp"
                        android:layout_height="283dp" app:srcCompat="@drawable/pic1_fashion_dua"
                        android:id="@+id/imageView2" android:layout_weight="1" android:layout_marginStart="50dp"
                        android:layout_marginTop="10dp" android:layout_marginRight="15dp"/>
                <TextView
                        android:text="Meadow tampil menawan dalam balutan gaun hitam panjang rancangan Saint Laurent dengan detail cut-out, beads, dan pita yang manis. Model berusia 22 tahun tersebut juga memakai aksesori berupa anting eardrop berlian. Terlihat pula pointed heels hitam yang ia pakai untuk melengkapi keseluruhan penampilannya. Dengan tatanan rambut sleek-bob simpel dan makeup natural, Meadow tampak begitu cantik alami."
                        android:layout_width="305dp"
                        android:layout_height="184dp" android:id="@+id/textView3" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>
                <TextView
                        android:text="Kemunculan Meadow di gala premier tersebut pun digadang-gadang merupakan tanda bahwa ia akan bergabung dalam film Fast and Furious 10 berikutnya. Namun, belum ada konfirmasi lebih lanjut mengenai dugaan tersebut. F9: Fast and Furious sendiri tayang 8 tahun pasca kepergian sang aktor, Paul Walker. Paul meninggal di usia 40 tahun dalam kecelakaan mobil yang dialaminya pada tahun 2013 silam. Saat itu Meadow masih berusia 15 tahun."
                        android:layout_width="308dp"
                        android:layout_height="190dp" android:id="@+id/textView4" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:textAlignment="viewStart" android:padding="5dp" android:layout_marginRight="15dp"/>
            </LinearLayout>
            <TextView
                    android:layout_width="307dp"
                    android:layout_height="100dp" android:id="@+id/textView5" android:visibility="visible"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="viewStart" android:padding="5dp"
                    android:text="Tetap mendukung mendiang sang ayah lewat kehadirannya di premier film F9: Fast and Furious 9, akankah Meadow bergabung dalam sekuel selanjutnya? Well, kita lihat saja nanti, ya! "
                    android:layout_marginRight="10dp"/>
            <TextView
                    android:layout_width="303dp"
                    android:layout_height="100dp" android:id="@+id/textView6" android:visibility="visible"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="viewStart" android:padding="5dp"
                    android:text="Source : https://womantalk.com/celebrity/articles/gaya-memikat-meadow-walker-anak-mendiang-paul-walker-saat-hadiri-premier-film-f9-fast-furious-9-ymg8e"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>