<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/popup_12">

    <TextView
            android:text="5 Artis Tak Puas dengan Peran di Film, Padahal Laris Manis di Pasaran"
            android:layout_width="260dp"
            android:layout_height="79dp" android:id="@+id/textView"
            android:layout_marginEnd="50dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp" android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="55dp"
            android:textAlignment="center" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2" android:textStyle="bold"/>

    <Button
            android:text="X"
            android:layout_width="48dp"
            android:layout_height="48dp" android:id="@+id/backButton"
            android:layout_marginTop="570dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginEnd="274dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" app:layout_constraintHorizontal_bias="0.76"
            app:layout_constraintVertical_bias="1.0" android:textSize="24sp"/>
    <ScrollView
            android:layout_width="393dp"
            android:layout_height="477dp" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/backButton" android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.659"
            app:layout_constraintVertical_bias="1.0" android:id="@+id/scrollView2"
            android:paddingRight="15dp" android:paddingLeft="15dp" android:paddingTop="15dp"
            android:paddingBottom="15dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:padding="10dp">
            <ImageView
                    android:layout_width="289dp"
                    android:layout_height="181dp" app:srcCompat="@drawable/pic1_entertainment_dua"
                    android:id="@+id/imageView" android:layout_marginStart="40dp" android:layout_marginRight="15dp"/>
            <TextView
                    android:text="ara.com - Film laris di pasaran tak serta merta membuat para pemainnya puas dengan peran yang dimainkannya. Berikut deretan artis yang tak puas dengan peran mereka di film."
                    android:layout_width="305dp"
                    android:layout_height="wrap_content" android:id="@+id/textView2" android:visibility="visible"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>
            <TextView
                    android:text="Ada beragam alasan yang jadi lata belakang ketidakpuasan para artis berikut saat memerankan tokoh yang dimainkannya. Padahal karakter mereka begitu vital di dalam film, bahkan membuat nama mereka meledak dikenal masyarakat. Kok bisa?"
                    android:layout_width="305dp"
                    android:layout_height="112dp" android:id="@+id/textView3" android:visibility="visible"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>
            <TextView
                    android:text="Berikut deretan artis yang tak puas dengan peran mereka di film:"
                    android:layout_width="305dp"
                    android:layout_height="wrap_content" android:id="@+id/textView4" android:visibility="visible"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>


            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">

                <ImageView
                        android:layout_width="289dp"
                        android:layout_height="225dp" app:srcCompat="@drawable/headline_thumbnail"
                        android:id="@+id/imageView3" android:layout_marginStart="40dp"
                        android:layout_marginRight="15dp"/>
                <TextView
                        android:text="1. Robert Pattinson saat memerakan Edward Cullen di Twilight Saga "
                        android:layout_width="305dp"
                        android:layout_height="29dp" android:id="@+id/textView5" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textAlignment="viewStart" android:padding="5dp"/>
                <TextView
                        android:text="Banyak yang menganggap Robert tidak bisa akting di Twilight Saga. Padahal memang perannya yang membuat ia tidak bisa mengeluarkan kemampuannya dalam bermain peran. Hal ini membuat Robert benci dengan karakter tersebut."
                        android:layout_width="305dp"
                        android:layout_height="118dp" android:id="@+id/textView6" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>
                <TextView
                        android:text="Di sekuel film ini, Rob memang dituntut untuk memerankan karakter vampir yang dingin dan minim menunjukkan ekspresinya. Penonton sendiri cukup sulit mendapati Edward Cullen tersenyum saat menjadi vampir dan ketika melindungi Bella Swan. Sayangnya, banyak penonton yang justru merasa aktingnya di sini kurang totalitas. Padahal, karakterya yang menuntut supaya Rob berakting seperti itu."
                        android:layout_width="305dp"
                        android:layout_height="182dp" android:id="@+id/textView7" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>


            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">

                <ImageView
                        android:layout_width="289dp"
                        android:layout_height="225dp" app:srcCompat="@drawable/pic2_entertainment_dua"
                        android:id="@+id/imageView4" android:layout_marginStart="40dp"
                        android:layout_marginRight="15dp"/>
                <TextView
                        android:text="2. Evangeline Lilly saat menjadi Kate Austen di Lost"
                        android:layout_width="305dp"
                        android:layout_height="29dp" android:id="@+id/textView8" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textAlignment="viewStart" android:padding="5dp"/>
                <TextView
                        android:text="Di serial televisi Lost yang berkisah tentang orang terjebak di sebuah pulau setelah kecelakaan, Lilly diharuskan melakukan adegan setengah telanjang. Hal ini membuatnya tidak nyaman dan membenci karakter tersebut."
                        android:layout_width="305dp"
                        android:layout_height="117dp" android:id="@+id/textView9" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>

                <TextView
                        android:text="Walaupun nggak sepenuhnya menunjukkan kulitnya, tapi proses syuting ketika menggarap film ini sempat membuatnya kurang nyaman. Apalagi sang sutradara memberikan tekanan berlebihan. Demi totalitas dan tidak mengurangi rasa profesionalitasnya, Lily tetap menjalani perannya di serial televisi ini selama 108 episode. "
                        android:layout_width="305dp"
                        android:layout_height="152dp" android:id="@+id/textView10" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">

                <ImageView
                        android:layout_width="289dp"
                        android:layout_height="225dp" app:srcCompat="@drawable/pic3_entertainment_dua"
                        android:id="@+id/imageView5" android:layout_marginStart="40dp"
                        android:layout_marginRight="15dp"/>
                <TextView
                        android:text="3. Carrie Fisher sebagai Leia Organa di Star Wars"
                        android:layout_width="305dp"
                        android:layout_height="29dp" android:id="@+id/textView11" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textAlignment="viewStart" android:padding="5dp"/>
                <TextView
                        android:text="Bukan karena karakternya tidak bermutu, Carrie menyesal mengambil peran ini karena Star Wars ternyata seterkenal itu. Beban ketenaran membuatnya menyesal pernah mengambil karakter tersebut dan berharap sekuel film ini cepat berakhir."
                        android:layout_width="305dp"
                        android:layout_height="116dp" android:id="@+id/textView12" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>

                <TextView
                        android:text="Aktris kelahiran 21 Oktober 1956 ini mulai ambil bagian di Star Wars sejak 1977. Menjadi Princess Leia Organa, image-nya langsung melekat dan disukai oleh penontonnya. Selama beberapa sekuel sejak masih muda hingga berumur sampai sekarang, tetap dipercaya oleh sutradara untuk memerankan karakter ini."
                        android:layout_width="305dp"
                        android:layout_height="152dp" android:id="@+id/textView13" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">

                <ImageView
                        android:layout_width="289dp"
                        android:layout_height="225dp" app:srcCompat="@drawable/pic4_entertainment_dua"
                        android:id="@+id/imageView6" android:layout_marginStart="40dp"
                        android:layout_marginRight="15dp"/>
                <TextView
                        android:text="4. Christopher Plummer Captain Georg von Trapp di The Sound of Music"
                        android:layout_width="305dp"
                        android:layout_height="29dp" android:id="@+id/textView14" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textAlignment="viewStart" android:padding="5dp"/>
                <TextView
                        android:text="Walaupun berperan dalam film legendaris pada 1965 dan dapat banyak penghargaan, tapi ia tidak suka memainkan peran tersebut. Ia menganggap film di The Sound of Music, perannya dianggap sok manis dan terlalu sentimental. "
                        android:layout_width="305dp"
                        android:layout_height="121dp" android:id="@+id/textView15" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>
                <TextView
                        android:text="Diangkat dari memoir dari Maria von Trapp, tentu saja Plummer harus menyesuaikan dirinya dan berperan sebagai Captain Georg. memang benar jika kesuksesan dan kebanggaan seorang aktor tidak selamanya tergantung dari banyaknya awards yang didapat saat berperan dari film tertentu."
                        android:layout_width="305dp"
                        android:layout_height="142dp" android:id="@+id/textView16" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">

                <ImageView
                        android:layout_width="289dp"
                        android:layout_height="225dp" app:srcCompat="@drawable/pic5_entertainment_dua"
                        android:id="@+id/imageView7" android:layout_marginStart="40dp"
                        android:layout_marginRight="15dp"/>
                <TextView
                        android:text="5. Jessica Alba sebagai Sue Storm di Fantastic Four"
                        android:layout_width="305dp"
                        android:layout_height="29dp" android:id="@+id/textView17" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textAlignment="viewStart" android:padding="5dp"/>
                <TextView
                        android:text="Jessica Alba menjadi salah satu aktris yang tampil memukai di Fantastic Four. Tampil pada 2007 silam di Fantastic Four: Rise of the Silver Surfer, karakter yang diperankan melekat di hati pentonton sampai saat ini."
                        android:layout_width="305dp"
                        android:layout_height="101dp" android:id="@+id/textView18" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>

                <TextView
                        android:text="Itulah deretan artis yang merasa tak puas dengan karakter yang dimainkannya di film. Padahal film-film tersebut laris manis di bioskop. Bagaimana menurutmu?"
                        android:layout_width="305dp"
                        android:layout_height="87dp" android:id="@+id/textView19" android:visibility="visible"
                        android:layout_marginStart="40dp"
                        android:textAlignment="viewStart" android:padding="5dp" android:layout_marginBottom="10dp"/>

            </LinearLayout>


            <TextView
                    android:layout_width="303dp"
                    android:layout_height="84dp" android:id="@+id/textView100" android:visibility="visible"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="viewStart" android:padding="5dp"
                    android:text="Source : https://www.suara.com/entertainment/2021/06/22/173835/5-artis-tak-puas-dengan-peran-di-film-padahal-laris-manis-di-pasaran?page=2">

            </TextView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>